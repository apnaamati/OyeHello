<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:layout_margin="12dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgRProfile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:src="@drawable/avatar"
        app:civ_border_color="#A3000000"
        app:civ_border_width="2dp"/>

    <EditText
        android:id="@+id/edtREmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRProfile"
        android:hint="Enter Your Email"
        android:background="@drawable/textbox_outline"
        android:padding="8dp"
        android:inputType="textEmailAddress"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/edtRName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtREmail"
        android:hint="Enter Your Full Name"
        android:background="@drawable/textbox_outline"
        android:padding="8dp"
        android:inputType="textPersonName"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/edtRBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtRName"
        android:hint="Enter Bio About You"
        android:inputType="text"
        android:layout_marginStart="12dp"
        android:background="@drawable/textbox_outline"
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/edtRPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtRBio"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:background="@drawable/textbox_outline"
        android:padding="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtRPass"
        android:layout_margin="24dp"
        android:text="Create"
        android:textAllCaps="false"
        android:backgroundTint="#00BCD4"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALREADY HAVE AN ACCOUNT?  "
        android:layout_below="@+id/btnRegister"
        android:layout_marginStart="66dp"/>

    <TextView
        android:id="@+id/txtSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" SIGN IN."
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/btnRegister"
        android:textColor="#3F51B5"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>